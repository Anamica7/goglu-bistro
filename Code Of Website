[13:30, 27/5/2025] Anamica SGT ü§ç: function toggleMenu() {
  const links = document.getElementById('nav-links');
  links.style.display = links.style.display === 'flex' ? 'none' : 'flex';
}

function submitForm(event) {
  event.preventDefault();
  document.getElementById("form-message").innerText = "Thanks! We‚Äôll get back to you soon.";
  event.target.reset();
}
